<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Player 1 Score:0"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvscore1"/>"

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Player 2 Score:0"
        android:layout_marginBottom="80dp"
        android:id="@+id/tvscore2"/>"

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player turn:"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:id="@+id/tvturn"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dice1"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:id="@+id/dice1"/>



    />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1 Turn Score:"
            android:layout_weight="50"
            android:id="@+id/tvp1tscore"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1 final Score:"
            android:layout_weight="50"
            android:id="@+id/tvp1fscore"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2 Turn Score:"
            android:layout_weight="50"
            android:id="@+id/tvp2tscore"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2 final Score:"
            android:layout_weight="50"
            android:id="@+id/tvp2fscore"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="90">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Roll"
            android:clickable="true"
            android:id="@+id/broll"/>

        />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="hold"
            android:clickable="true"
            android:id="@+id/bhold"/>
        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice2"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:id="@+id/dice2"/>
        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice3"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:id="@+id/dice3"/>
        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice4"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:id="@+id/dice4"/>
        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice5"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:id="@+id/dice5"/>
        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice6"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:id="@+id/dice6"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Reset"
            android:clickable="true"
            android:id="@+id/breset"/>

    </LinearLayout>
</LinearLayout>